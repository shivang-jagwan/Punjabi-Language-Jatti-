{
  "scopeName": "source.jatti",
  "name": "Jatti Language",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#booleans" },
    { "include": "#functions" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.jatti",
          "match": "\\bfaltu_hai\\b.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.jatti",
          "begin": "\"",
          "end": "\""
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.jatti",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.jatti",
          "match": "\\b(sach|jhoot|khaali)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.jatti",
          "match": "\\b(sun_we|ja_we|je|nahin_taan|nahin_taan_je|jadon_tak|har_ek)\\b"
        },
        {
          "name": "keyword.other.jatti",
          "match": "\\b(chal_oye|das_oye|chilla_we|kaam|wapas_kar|python_le_aa|pa_ander|copy_kar|saaf_kar|kinna_lamba)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.jatti",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\s*(?=\\()"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.jatti",
          "match": "\\b(vadha_hai|nikka_hai|mil_gaya)\\b"
        }
      ]
    }
  }
}
