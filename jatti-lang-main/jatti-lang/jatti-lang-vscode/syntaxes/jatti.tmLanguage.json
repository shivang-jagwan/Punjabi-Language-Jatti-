{
  "scopeName": "source.jatti",
  "name": "Jatti Language",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#keywords" },
    { "include": "#booleans" },
    { "include": "#functions" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.jatti",
          "match": "\\bfaltu_hai\\b.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.jatti",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.jatti",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.jatti",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.jatti",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.jatti",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.jatti",
          "match": "\\b(sach|jhoot|khaali)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.jatti",
          "match": "(barabar|barabar_nahi_hai|nikka_ya_barabar|vadha_ya_barabar|nikka_hai|vadha_hai|!=|<=|>=|==|<|>)"
        },
        {
          "name": "keyword.operator.logical.jatti",
          "match": "\\b(aur|ya)\\b"
        },
        {
          "name": "keyword.operator.assignment.jatti",
          "match": "ban"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.jatti",
          "match": "\\b(sun_we|ja_we|je|nahin_taan|nahin_taan_je|jadon_tak|har_ek)\\b"
        },
        {
          "name": "keyword.other.jatti",
          "match": "\\b(chal_oye|das_oye|chilla_we|kaam|wapas_kar|python_le_aa|pa_ander|copy_kar|saaf_kar|kinna_lamba|ban|nahi|mil_gaya)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.jatti",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\s*(?=\\()"
        }
      ]
    }
  }
}

