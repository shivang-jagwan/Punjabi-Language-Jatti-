# Jatti Playground environment variables
# Copy this file to .env and edit values as needed.
# NOTE: Never commit .env if it contains secrets.

# Optional: require clients to send X-API-Key: <value>
# Leave empty to disable API key enforcement.
JATTI_API_KEY=

# Secure deployment (reverse proxy)
# Used by docker-compose.secure.yml + Caddyfile
SITE_ADDRESS=playground.example.com
BASIC_AUTH_USER=admin
# Generate with:
#   docker run --rm caddy:2 caddy hash-password --plaintext "yourPasswordHere"
BASIC_AUTH_HASH=

# Demo-mode cookie lifetime (seconds)
DEMO_COOKIE_MAX_AGE=3600

# Execution/time/resource limits
JATTI_TIMEOUT_SEC=2.5
JATTI_MAX_CODE_BYTES=200000
JATTI_MAX_OUTPUT_BYTES=200000

# Rate limiting (fixed window), per client IP
JATTI_RATE_WINDOW_SEC=10
JATTI_RATE_MAX_REQ=30
